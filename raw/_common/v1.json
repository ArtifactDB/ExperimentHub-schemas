{
    "allOf": [ 
        { "$ref": "../../original/raw/_common/v1.json" },
        {
            "if": {
                "properties": {
                    "is_child": {
                        "const": true
                    }
                }
            },
            "then": {
                "required": [
                    "title",
                    "description",
                    "maintainers",
                    "species",
                    "genome",
                    "origin",
                    "bioc_version"
                ]
            }
        }
    ],

    "properties": {
        "title": {
            "type": "string",
            "description": "Title of the resource."
        },

        "description": {
            "type": "string",
            "description": "Description of the resource."
        },

        "maintainers": {
            "type": "array",
            "description": "Maintainers of this resource.",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "description": "Name of the maintainer."
                    },
                    "email": {
                        "type": "string",
                        "description": "Email of the maintainer.",
                        "pattern": "^[^@]+@[^@]+$"
                    }
                }
            }
        },

        "species": {
            "type": "array",
            "description": "NCBI taxonomy IDs of the species involved in this resource.",
            "items": {
                "type": "integer"
            },
            "minimum": 1
        },

        "genome": {
            "type": "array",
            "description": "UCSC, Ensembl or other genome builds involved in generating this resource.",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string",
                        "description": "Identifier for this genome build.",
                        "examples": [ "mm10", "NCBIm37" ]
                    },
                    "source": {
                        "type": "string",
                        "description": "Source of the genome build identifier.",
                        "enum": [ "Ensembl", "UCSC", "Wormbase", "Flybase" ]
                    }
                },
                "required": [
                    "id",
                    "source"
                ]
            }
        },

        "bioc_version": {
            "type": "string",
            "description": "Version of Bioconductor used to generate this resource.",
            "pattern": "^[0-9]+\\.[0-9]+$"
        },

        "origin": {
            "type": "array",
            "description": "Origins of this resource.",
            "items": {
                "type": "object",
                "properties": {
                    "source": {
                        "type" :"string",
                        "description": "Source database or repository.",
                        "enum": [ "PubMed", "GEO", "ArrayExpress", "DOI", "URI" ]
                    },
                    "id": {
                        "type": "string",
                        "description": "Identifier for the resource in the specified `type`."
                    }
                },
                "allOf": [ 
                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "PubMed"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9]+$"
                                }
                            }
                        }
                    },

                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "GEO"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^GSE[0-9]+$"
                                }
                            }
                        }
                    },

                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "ArrayExpress"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^E-MTAB-[0-9]+$"
                                }
                            }
                        }
                    },

                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "DOI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^[0-9a-zA-Z\\._-]+/[0-9a-zA-Z\\._-]+$"
                                }
                            }
                        }
                    },

                    {
                        "if": {
                            "properties": {
                                "source": {
                                    "const": "URI"
                                }
                            }
                        },
                        "then": {
                            "properties": {
                                "id": {
                                    "pattern": "^(http|ftp|https|s3|sftp)://"
                                }
                            }
                        }
                    }
                ]
            }
        }
    }
}
